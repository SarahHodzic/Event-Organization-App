    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');

        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            padding: 0;
            background-color: #f0f2f5;
        }

        .logo {
            font-family: 'Pacifico', cursive;
            font-size: 30px;
            color: #FF7F50;
            text-shadow: 3px 3px 0 #FFA07A;
        }

        .nav-link-signup, .nav-link-admin-panel {
            background-color: #FFA07A;
            font-weight: bold;
            color: white;
            border-radius: 5px;
            padding: 5px 10px;
        }

        .nav-link-signup:hover {
            background-color: #FF7F50;
            color: white;
            cursor: pointer;
        }

        .nav-link-login:hover {
            cursor: pointer;
        }

        .profile-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            max-width: 800px;
            margin: 50px auto;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            margin-top: 0;
        }

        .profile-header {
            position: relative;
            width: 100%;
            height: 300px;
            background-color: #d8d8d8;
            background-size: cover;
            background-position: center;
            z-index: 0;
        }

        .profile-header img.cover-photo {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .edit-cover-photo {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background-color: rgba(255, 127, 80, 0.7);
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .profile-picture {
            position: relative;
            margin-top: -60px;
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 5px solid white;
            overflow: hidden;
            cursor: pointer;
            z-index: 1;

        }

        .profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .profile-info {
            text-align: center;
            margin-top: 10px;
            padding: 20px;
        }

        .profile-info h1 {
            margin: 0;
            font-size: 24px;
        }

        .profile-info p {
            color: rgb(128, 128, 128);
        }

        .profile-nav {
            display: flex;
            justify-content: space-around;
            margin: 20px 0;
            border-top: 1px solid #ddd;
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
            background-color: white;
        }

        .profile-nav a {
            text-decoration: none;
            color: #333;
            padding: 10px 20px;
        }

        .profile-nav a:hover {
            background-color: #f0f0f0;
        }

        .content-section {
            padding: 20px;
            background-color: white;
            margin-bottom: 20px;
        }


        input[type="file"] {
            display: none;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-edit {
            background-color: rgba(255, 127, 80, 0.7);
            color: white;
        }

        .form-edit:hover {
            background-color: #FF7F50;
            color: white;
        }
        #exampleInputImage{
            display:block;
        }

        #exampleEditImage{
            display:block;
        }

        .card {
            margin-bottom: 20px;
        }

        .carousel-inner {
            padding: 20px 0;
        }

        .carousel-item .card {
            margin: 0 15px;
        }

        .carousel {
            position: relative;
        }

        .carousel-control-prev,
        .carousel-control-next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 50px;
            height: 50px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10;
        }

        .carousel-control-prev {
            left: 0;
        }

        .carousel-control-next {
            right: 0;
        }

        .status-indicator {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 10px;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            opacity: 0.8;
        }

        .status-active {
            background-color: rgba(76, 175, 80, 0.8);
        }

        .status-inactive {
            background-color: rgba(244, 67, 54, 0.8);
        }

        .card-title {
            margin-bottom: 0;
        }

        .price {
            margin: 0;
        }

        .italic {
            font-style: italic;
        }

        .card-text {
            margin-bottom: 0.5rem;
        }

        .button-group {
            position: absolute;
            top: 10px;
            left: 10px;
            display: flex;
            gap: 5px;
        }

        .edit-btn {
            background-color: #ffc107;
            color: white;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
        }

        .greeting {
            font-family: 'Pacifico', cursive;
            font-size: 1.5rem;
            color: #333;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
            letter-spacing: 0.5px;
            margin-right: 15px;
        }
        .card {
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
            cursor: pointer;
        }



    </style>

</head>
