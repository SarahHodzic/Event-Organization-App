    <script>
        function login(){
            location.href = '/login';
        }

        function logout(){
            location.href = '/login/logout'
        }

        function changeProfilePhoto(event) {
            const file = event.target.files[0];
            console.log("file" , file)
            if (file) {
                const formData = new FormData();
                formData.append('profilePhoto', file);

                const userId = `<%= userId %>`;
                console.log(userId);
                const numericUserId = Number(userId);
                console.log(numericUserId);

                fetch(`/organiser/profile-photo/${numericUserId}`, {
                    method: 'POST',
                    body: formData
                })
                    .then(response => response.json())
                    .then(data => {

                        console.log(data)
                        if (data.message) {

                            const reader = new FileReader();
                            reader.onload = function(e) {
                                document.querySelector('.profile-picture img').src = e.target.result;
                            };
                            reader.readAsDataURL(file);
                        } else {
                            alert("Failed to upload image.");
                        }
                    })
                    .catch(err => console.error("Error uploading image: ", err));
            }
        }


        function changeCoverPhoto(event) {
            const file = event.target.files[0];
            if (file) {
                const formData = new FormData();
                formData.append('coverPhoto', file);

                const userId = `<%= userId %>`;
                console.log(userId);
                const numericUserId = Number(userId);
                console.log(numericUserId);

                fetch(`/organiser/cover-photo/${numericUserId}`, {
                    method: 'POST',
                    body: formData
                })
                    .then(response => response.json())
                    .then(data => {
                        console.log(data)
                        if (data.message) {

                            const reader = new FileReader();
                            reader.onload = function(e) {
                                document.querySelector('.cover-photo').src = e.target.result;
                            };
                            reader.readAsDataURL(file);
                        } else {
                            alert("Failed to upload image.");
                        }
                    })
                    .catch(err => console.error("Error uploading image: ", err));
            }
        }


        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', function() {
                const eventId = this.getAttribute('data-id');


                if (confirm('Are you sure you want to delete this event?')) {

                    fetch(`/organiser/events/${eventId}`, {
                        method: 'DELETE',
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Error while deleting event');
                            }
                            return response.json();
                        })
                        .then(data => {
                            if (data.success) {
                                const eventCard = this.closest('.col-md-5');
                                eventCard.remove();
                                alert('Event deleted successfully');
                            } else {
                                alert('Failed to delete event');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('There was an issue deleting the event. Please try again.');
                        });
                }
            });
        });

        document.addEventListener('DOMContentLoaded', function () {

            const eventsElement = document.getElementById('eventData');
            const events = JSON.parse(eventsElement.getAttribute('data-events'));


            document.querySelectorAll('.edit-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const eventId = this.getAttribute('data-id');
                    console.log("ID EVENTA - ", eventId);

                    const event = events.find(event => event.id === parseInt(eventId));


                    if (event) {

                        document.getElementById('exampleEditName').value = event.name;
                        document.getElementById('exampleEditDate').value = new Date(event.date).toISOString().slice(0, 10);
                        document.getElementById('exampleEditTime').value = event.time.slice(0, 5);
                        document.getElementById('exampleEditLocation').value = event.location_id;
                        document.getElementById('exampleEditDescription').value = event.description;
                        document.getElementById('exampleEditCategory').value = event.category_id;
                        document.getElementById('exampleEditPrice').value = event.ticket_price;


                        document.getElementById('edit-submit-btn').setAttribute('data-id', eventId);

                        const editEventModal = new bootstrap.Modal(document.querySelector('.edit-event'), {});
                        editEventModal.show();
                    } else {
                        console.error(`Event with ID ${eventId} not found.`);
                    }
                });
            });
        });


        $('#edit-submit-btn').on('click', function (event) {
            event.preventDefault();
            const eventsElement = document.getElementById('eventData');
            const events = JSON.parse(eventsElement.getAttribute('data-events'));
            const eventId = $(this).data('id');

            const formData = new FormData();
            formData.append('name', $('#exampleEditName').val());
            formData.append('date', $('#exampleEditDate').val());
            formData.append('time', $('#exampleEditTime').val());
            formData.append('location_id', $('#exampleEditLocation').val());
            formData.append('description', $('#exampleEditDescription').val());
            formData.append('category_id', $('#exampleEditCategory').val());
            formData.append('ticket_price', $('#exampleEditPrice').val());

            const imageFile = $('#exampleEditImage')[0].files[0];
            console.log("IMAGE FILE - ", imageFile);
            if (imageFile) {
                formData.append('image', imageFile);
            }

            $.ajax({
                url: `/organiser/edit-event/${eventId}`,
                type: 'PUT',
                contentType: false,
                processData: false,
                data: formData,
                success: function (response) {
                    if (response.success) {

                        const updatedEvent = {
                            id: eventId,
                            name: $('#exampleEditName').val(),
                            date: $('#exampleEditDate').val(),
                            time: $('#exampleEditTime').val(),
                            location_id: $('#exampleEditLocation').val(),
                            description: $('#exampleEditDescription').val(),
                            category_id: $('#exampleEditCategory').val(),
                            ticket_price: $('#exampleEditPrice').val(),
                            image: imageFile ? `/events/${imageFile.name}` : response.image
                        };


                        const eventIndex = events.findIndex(event => event.id === parseInt(eventId));
                        if (eventIndex > -1) {
                            events[eventIndex] = updatedEvent;
                        }

                        const eventCard = $(`button[data-id="${eventId}"]`).closest('.card');


                        eventCard.find('.card-title').text(updatedEvent.name);
                        eventCard.find('.price').text(`${updatedEvent.ticket_price} $`);
                        eventCard.find('.card-text.italic').text($('#exampleEditCategory option:selected').text());
                        eventCard.find('.card-text.date').first().text(`${new Date(updatedEvent.date).toLocaleDateString()} ${updatedEvent.time}`);
                        eventCard.find('.bi-geo-alt-fill').prev().text($('#exampleEditLocation option:selected').text());


                        if (imageFile) {
                            const newImageURL = URL.createObjectURL(imageFile);
                            eventCard.find('.card-img-top').attr('src', newImageURL);
                        }


                        $('.edit-event').modal('hide');
                    } else {
                        alert('There was a problem updating the event.');
                    }
                },
                error: function () {
                    alert('There was an error updating the event. Please try again.');
                }
            });
        });





    </script>


