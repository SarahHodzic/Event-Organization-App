<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="icon" href="https://img.icons8.com/?size=100&id=S2nXC8Z2nl3J&format=png&color=000000" type="image/x-icon">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');

        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            padding: 0;
        }

        /* navigation */

        .logo {
            font-family: 'Pacifico', cursive;
            font-size: 30px;
            color: #FF7F50;
            text-shadow: 3px 3px 0 #FFA07A;
        }

        .nav-link-signup, .nav-link-admin-panel {
            background-color: #FFA07A;
            font-weight: bold;
            color: white;
            border-radius: 5px;
            padding: 5px 10px;
        }
        .nav-link-signup:hover {
            background-color: #FF7F50;
            color: white;
            cursor: pointer;
        }

        .nav-link-login:hover {
            cursor:pointer;
        }

        /* footer */

    .footer-custom {
            background: linear-gradient(135deg, rgba(255, 127, 80, 0.9), rgba(255, 127, 80, 0.2));
            color: white;
            padding: 40px 0;
            font-family: 'Arial', sans-serif;
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.1);
        }

        .footer-custom h5 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .footer-custom p, .footer-custom a {
            color: white;
            font-size: 14px;
        }

        .footer-custom a:hover {
            text-decoration: underline;
        }

        .social-icon {
            display: inline-block;
            margin: 0 10px;
            transition: transform 0.3s;
        }

        .social-icon img {
            width: 30px;
            height: 30px;
        }

        .social-icon:hover {
            transform: scale(1.2);
        }

        .profile-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #FF7F50;
            cursor: pointer;
            transition: transform 0.3s ease;
        }
        .profile-img:hover {
            transform: scale(1.1);
        }

        /* event cards */
        .status-indicator {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 10px;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            opacity: 0.8;
        }

        .status-active {
            background-color: rgba(76, 175, 80, 0.8);
        }

        .status-inactive {
            background-color: rgba(244, 67, 54, 0.8);
        }

        .card {
            border: none;
            height: 100%;
            transition: transform 0.2s ease-in-out;
        }

        /* Slike */
        .event-image {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

        .card:hover {
            transform: scale(1.05);
            cursor: pointer;
        }

        .card-title {
            margin-bottom: 0;
        }

        .price {
            margin: 0;
        }

        .italic {
            font-style: italic;
        }

        .card-text {
            margin-bottom: 0.5rem;
        }

        .custom-hr {
            width: 50%;
            margin: 2% auto;
            border: 1px solid #ccc;
        }

        .custom-title {
            background-color: #f8f9fa;
            color: #FF7F50;
            padding: 10px 20px;
            border-radius: 5px;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: bold;
            position: relative;
        }

        .custom-title::after {
            content: "";
            width: 50px;
            height: 3px;
            background-color: #FF7F50;
            position: absolute;
            bottom: -8px;
            left: 0;
            transform: translateX(-50%);
            border-radius: 2px;
        }

        .organizer-info {
            position: absolute;
            top: 10px;
            left: 10px;
            font-size: 14px;
            color: #333;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 5px 10px;
            border-radius: 5px;
            display: flex;
            align-items: center;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .organizer-info i {
            margin-right: 5px;
        }

        .search-input-wide {
            width: 100%;
        }

        .greeting {
            font-family: 'Pacifico', cursive;
            font-size: 1.5rem;
            color: #333;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
            letter-spacing: 0.5px;
            margin-right: 15px;
        }

        .no-events {
            margin: 20px 0;
            padding: 20px;
            border: 1px solid #ffcc00;
            border-radius: 10px;
            background-color: #fff3cd;
            color: #856404;
            font-size: 1.2em;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .no-events-icon {
            font-size: 50px;
            color: #856404;
        }

        .no-events-message {
            margin-top: 10px;
            font-weight: bold;
        }


    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <div class="logo">Eventify</div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarSupportedContent">
                <form class="d-flex me-auto mb-2 mb-lg-0 flex-grow-1" role="search" action="/search" method="POST">
                    <input class="form-control me-2 search-input-wide" type="search" name="searchTerm" placeholder="Search events, organizers, locations..." aria-label="Search" required>
                    <button class="btn btn-outline-warning" type="submit">Search</button>
                </form>
                <ul class="navbar-nav">
                    <%if(!userId){%>
                    <li class="nav-item me-1">
                        <a class="nav-link nav-link-login" onclick="login()">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  nav-link-signup" href="/register">Sign up</a>
                    </li>
                    <%} else{%>
                    <li class="nav-item me-1">
                        <a class="nav-link greeting">Hello <%=name%> !!!</a>
                    </li>
                    <%if (userType === 1) {%>
                    <li class="nav-item me-1">
                        <a class="nav-link nav-link-admin-panel" href="/admin">Admin Panel</a>
                    </li>
                     <%}%>
                    <li class="nav-item me-1 d-flex align-items-center">
                        <a class="nav-link nav-link-signup" onclick="logout()">Logout</a>
                    </li>
                        <%if (userType !== 1){%>
                    <li class="nav-item me-1 d-flex align-items-center">
                        <a class="nav-link nav-link-signup" href="/applications/<%=userId%>">Applications</a>
                    </li>
                        <%}%>
                        <%if (userType === 2){%>
                    <li class="nav-item me-1 d-flex align-items-center">
                        <a class="nav-link" href="/organiser/<%=userId%>">
                            <img src="<%=users.profile_picture%>" alt="Profile" class="profile-img">
                        </a>
                    </li>
                    <%}}%>
                </ul>
            </div>
        </div>
    </nav>

    <%if(filter){%>
        <div class="container m-4">
            <div class="row align-items-center" style="margin-left:3%;">
                <div class="col-auto">
                    <label for="filtering" class="form-label mb-0">Filter by:</label>
                </div>
                <div class="col-auto">
                    <select id="filtering" class="form-select" onchange="filter(this.value)" style="width: 200px;">
                        <option selected value="1">Confirmed Events</option>
                        <option value="2">Cancelled Events</option>
                        <option value="3">Finished Events</option>
                    </select>
                </div>

                <div class="col-auto">
                    <label for="sort" class="form-label mb-0">Sort by:</label>
                </div>
                <div class="col-auto">
                    <select id="sort" class="form-select" onchange="sort(this.value)" style="width: 200px;">
                        <option selected value="1">Date Descending</option>
                        <option value="2">Date Ascending</option>
                        <option value="3">Price Descending</option>
                        <option value="4">Price Ascending</option>
                        <option value="5">Rating Descending</option>
                        <option value="6">Rating Ascending</option>
                    </select>
                </div>
            </div>
        </div>

    <%}%>


    <!-- Events section -->
    <div class="container mt-5 mb-5" id="events_container">
        <h5 class="custom-title text-start mb-4">All events:</h5>
        <div class="row g-4" id="eventsHTML">
            <%if (events.length === 0) {%>
                <div class="no-events text-center">
                    <i class="bi bi-exclamation-circle no-events-icon"></i>
                    <p class="no-events-message">No events found</p>
                </div>

        <%}
                    else {
                %>
            <% events.forEach(event => { %>
                <div class="col-md-4">
                    <div class="card shadow-sm" style="position: relative; height: 100%;" data-id="<%= event.id%>">
                        <!-- Organizator -->
                        <div class="organizer-info">
                            <i class="bi bi-person-fill"></i>
                            <%= event.organizer_name %> <%= event.organizer_surname %>
                        </div>
                        <!-- Status -->
                        <div class="status-indicator <%= event.event_status_id === 1 ? 'status-active' : 'status-inactive' %>">
                            <%= event.status_name %>
                        </div>
                        <img class="card-img-top event-image" src="<%= event.image %>" alt="Event image">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title"><%= event.name %></h5>
                                <p class="card-text price"><%= event.ticket_price %> $</p>
                            </div>
                            <p class="card-text italic"><%= event.category_name %></p>
                            <div class="d-flex justify-content-between mt-auto">
                                <p class="card-text"><%= event.formattedDate %> <%= event.formattedTime %></p>
                                <p class="card-text"><%= event.location_name %> <i class="bi bi-geo-alt-fill"></i></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) }%>
        </div>
    </div>


    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>About Eventify</h5>
                    <p>
                        Eventify helps you find and create events tailored to your interests. Join the fun and never miss out on any exciting events!
                    </p>
                </div>
                <div class="col-md-4 text-center">
                    <h5>Follow Us</h5>
                    <a href="#" class="social-icon"><img src="/images/facebook-icon.png" alt="Facebook" /></a>
                    <a href="#" class="social-icon"><img src="/images/x-icon.png" alt="X" /></a>
                    <a href="#" class="social-icon"><img src="/images/instagram-icon.png" alt="Instagram" /></a>
                </div>
                <div class="col-md-4 text-end">
                    <h5>Contact Us</h5>
                    <p>Email: <a href="mailto:support@eventify.com">support@eventify.com</a></p>
                    <p>Phone: +123 456 7890</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <p>&copy; 2024 Eventify. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        function login(){
            location.href = '/login';
        }

        function logout(){
            location.href = '/login/logout'
        }
        function profile(){
            location.href = '/organiser'
        }

        document.querySelectorAll('.card').forEach(card =>{
            card.addEventListener('click', function() {

                const eventId = this.getAttribute('data-id');
                console.log("clicked", eventId);
                window.location.href = `/event/${eventId}`;
            })
        })

        function filter(selectedValue){
            console.log("SELECTED VALUE: ", selectedValue);
            let eventsHtml = '';
            $.ajax({
                url: `/category/filter/${selectedValue}`,
                type: "GET",
                contentType: 'application/json',
                success: function(response){
                    if(response.success) {
                        if (response.data.length === 0) {
                            eventsHtml = `
                        <div class="no-events text-center">
                            <i class="bi bi-exclamation-circle no-events-icon"></i>
                            <p class="no-events-message">No events found</p>
                        </div>
                    `
                        } else {

                            (response.data).forEach(event => {
                                eventsHtml += `<div class="col-md-4">
                                <div class="card shadow-sm" style="position: relative; height: 100%;" data-id="${event.id}">
                                    <!-- Organizator -->
                                    <div class="organizer-info">
                                        <i class="bi bi-person-fill"></i>
                                        ${event.organizer_name}  ${event.organizer_surname}
                                    </div>
                                    <!-- Status -->
                                    <div class="status-indicator ${event.event_status_id === 1 ? 'status-active' : 'status-inactive'} ">
                                        ${event.status_name}
                                    </div>
                                    <img class="card-img-top event-image" src="${event.image}" alt="Event image">
                                        <div class="card-body d-flex flex-column">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h5 class="card-title">${event.name}</h5>
                                                <p class="card-text price">${event.ticket_price} $</p>
                                            </div>
                                            <p class="card-text italic">${event.category_name}</p>
                                            <div class="d-flex justify-content-between mt-auto">
                                                <p class="card-text">${event.formattedDate} ${event.formattedTime}</p>
                                                <p class="card-text">${event.location_name} <i class="bi bi-geo-alt-fill"></i></p>
                                            </div>
                                        </div>
                                </div>
                            </div>`
                            })
                        }
                        $("#eventsHTML").html(eventsHtml);
                        document.querySelectorAll('.card').forEach(card => {
                            card.addEventListener('click', function() {
                                const eventId = this.getAttribute('data-id');
                                console.log("clicked", eventId);
                                window.location.href = `/event/${eventId}`;
                            });
                        });
                    }
                },
                error: function(){
                    console.log("Error while filtering data ")
                }

            })
        }

        function sort(selectedValue){
            console.log("SELECTED VALUE SORT: ", selectedValue);
            let eventsHtml = '';
            $.ajax({
                url: `/category/sort/${selectedValue}`,
                type: "GET",
                contentType: 'application/json',
                success: function(response){
                    if(response.success) {
                        if (response.data.length === 0) {
                            eventsHtml = `
                        <div class="no-events text-center">
                            <i class="bi bi-exclamation-circle no-events-icon"></i>
                            <p class="no-events-message">No events found</p>
                        </div>
                    `
                        } else {

                            (response.data).forEach(event => {
                                eventsHtml += `<div class="col-md-4">
                                <div class="card shadow-sm" style="position: relative; height: 100%;" data-id="${event.id}">
                                    <!-- Organizator -->
                                    <div class="organizer-info">
                                        <i class="bi bi-person-fill"></i>
                                        ${event.organizer_name}  ${event.organizer_surname}
                                    </div>
                                    <!-- Status -->
                                    <div class="status-indicator ${event.event_status_id === 1 ? 'status-active' : 'status-inactive'} ">
                                        ${event.status_name}
                                    </div>
                                    <img class="card-img-top event-image" src="${event.image}" alt="Event image">
                                        <div class="card-body d-flex flex-column">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h5 class="card-title">${event.name}</h5>
                                                <p class="card-text price">${event.ticket_price} $</p>
                                            </div>
                                            <p class="card-text italic">${event.category_name}</p>
                                            <div class="d-flex justify-content-between mt-auto">
                                                <p class="card-text">${event.formattedDate} ${event.formattedTime}</p>
                                                <p class="card-text">${event.location_name} <i class="bi bi-geo-alt-fill"></i></p>
                                            </div>
                                        </div>
                                </div>
                            </div>`
                            })
                        }
                        $("#eventsHTML").html(eventsHtml);
                        document.querySelectorAll('.card').forEach(card => {
                            card.addEventListener('click', function() {
                                const eventId = this.getAttribute('data-id');
                                console.log("clicked", eventId);
                                window.location.href = `/event/${eventId}`;
                            });
                        });
                    }
                },
                error: function(){
                    console.log("Error while sorting data ")
                }

            })
        }

    </script>


</body>
</html>
