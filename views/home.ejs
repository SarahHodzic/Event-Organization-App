    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>

        function login(){
            location.href = '/login';
        }

        function logout(){
            location.href = '/login/logout'
        }
        function profile(){
            location.href = '/organiser'
        }

        const userId = <%= JSON.stringify(userId) %>
        //console.log("UserId", userId);

        document.querySelectorAll('.card').forEach(card =>{
            card.addEventListener('click', function() {

                const eventId = this.getAttribute('data-id');
                console.log("clicked", eventId);
                window.location.href = `/event/${eventId}`;
            })
        })

        let socket = io.connect('ws://localhost:3000')
        socket.emit('register', userId);


        const userList = document.getElementById('userList');
        const chatWindow = document.getElementById('chatWindow');
        const chatWith = document.getElementById('chatWith');
        const messagesDiv = document.getElementById('messages');
        let currentChatUser = null;


        function toggleChatList() {
            const chatList = document.getElementById('chatList');
            chatList.style.display = chatList.style.display === 'none' ? 'block' : 'none';
        }

        // Otvara chat prozor sa odabranim korisnikom
        async function openChat(user) {
            currentChatUser = user;
            chatWith.textContent = `Chat with: ${user.name} ${user.surname}`;
            chatWindow.style.display = 'block';

            // Fetch chat history
            const response = await fetch(`/chat-history/${user.id}/${userId}`);
            const messages = await response.json();

            // Display messages with different alignment for sender and receiver
            const messagesContainer = document.getElementById('messages');
            messagesContainer.innerHTML = ''; // Clear previous messages
            messages.forEach((message) => {
                const messageElement = document.createElement('div');
                messageElement.classList.add('message');

                // Check if the message is from the current user or the other user
                if (message.sender_id === userId) {
                    messageElement.classList.add('sender'); // Sender (you)
                    messageElement.textContent = `You: ${message.text}`;
                } else {
                    messageElement.classList.add('receiver'); // Receiver (other user)
                    messageElement.textContent = `${user.name}: ${message.text}`;
                }

                messagesContainer.appendChild(messageElement);
            });
        }




        function sendMessage() {
            const messageInput = document.getElementById('messageInput');
            const message = messageInput.value;
            if (!message) return;

            socket.emit('chat message', {
                senderId: userId,
                receiverId: currentChatUser.id,
                message,
            });

            // Display the message on the UI with alignment
            const messagesContainer = document.getElementById('messages');
            const messageElement = document.createElement('div');
            messageElement.classList.add('message', 'sender');
            messageElement.textContent = `You: ${message}`;
            messagesContainer.appendChild(messageElement);

            messageInput.value = ''; // Clear input
        }

        socket.on('newMessage', (data) => {
            const { senderId, message } = data;


            console.log(`New message from user ${senderId}: ${message}`);


            const messagesContainer = document.getElementById('messages');
            const messageElement = document.createElement('div');
            messageElement.classList.add('message', 'receiver');

            messageElement.textContent = `${message}`;
            messagesContainer.appendChild(messageElement);
        });




        function closeChatWindow() {
            chatWindow.style.display = 'none';
        }
        function closeChat() {
